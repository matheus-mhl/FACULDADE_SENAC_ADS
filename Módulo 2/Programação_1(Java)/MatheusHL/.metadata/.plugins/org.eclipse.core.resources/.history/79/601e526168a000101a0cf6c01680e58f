package exRevisaoC1;

public class Autor { //Nesta linha criamos uma classe
	// Agora estamos criando atributos privados
	private String nome; //String nome
	private String nacionalidade; //String nacionalidade

    // Criando construtor que inicializa todos os atributos
    public Autor(String nome, String nacionalidade) {
        this.nome = nome;
        this.nacionalidade = nacionalidade;
    }
    
    //Criando métodos públicos getNome() & getNacionalidade()
    public String getNome() {
        return nome;
    }
    
    public String getNacionalidade() {
    	return nacionalidade;
    }




}
